<?xml version="1.0" encoding="utf-8"?>
<form
	lessfiles="media://com_redeventsync/css/backend.less||media://com_redeventsync/css/backend.css"
	type="browse"
	show_header="1"
	show_filters="1"
	show_pagination="1"
	norows_placeholder="COM_REDEVENTSYNC_COMMON_NORECORDS"
>
	<headerset>
		<header name="redeventsync_log_id" type="rowselect" tdwidth="20" />
		<header name="date" type="fieldsearchable" sortable="true"
			buttons="yes" buttonclass="btn"
		/>
		<header name="direction" type="field" sortable="true" tdwidth="12%" />
		<header name="transactionid" type="field" sortable="true" tdwidth="12%" />
		<header name="type" type="field" sortable="true" tdwidth="10%" />
		<header name="status" type="field" sortable="true" tdwidth="10%" />
	</headerset>

	<fieldset name="items">
		<field name="redeventsync_log_id" type="selectrow"/>

		<field name="date" type="text"
			show_link="true"
			url="index.php?option=com_redeventsync&amp;view=log&amp;id=[ITEM:ID]"
			class="redeventsyncitem"
			empty_replacement="(no title)"
		 />

		<field name="direction" type="text"/>
		<field name="transactionid" type="text"/>
		<field name="type" type="text"/>

		<field name="status" type="text"/>
	</fieldset>
</form>
