<?xml version="1.0" encoding="utf-8"?>
<form
	lessfiles="media://com_redeventsync/css/backend.less||media://com_redeventsync/css/backend.css"
	type="browse"
	show_header="1"
	show_filters="1"
	show_pagination="1"
	norows_placeholder="COM_REDEVENTSYNC_COMMON_NORECORDS"
>
	<headerset>
		<header name="redeventsync_queuedmessage_id" type="rowselect" tdwidth="20" />
		<header name="queued" type="fieldsearchable" sortable="true"
			buttons="yes" buttonclass="btn"
		/>
		<header name="plugin" type="fieldsearchable" sortable="true" tdwidth="10%" />
		<header name="message" type="fieldsearchable" sortable="true" tdwidth="80%" />
	</headerset>

	<fieldset name="items" addfieldpath="/administrator/components/com_redeventsync/fields">
		<field name="redeventsync_queuedmessage_id" type="selectrow"/>

		<field name="queued" type="text"
			show_link="true"
			url="index.php?option=com_redeventsync&amp;view=queuedmessage&amp;id=[ITEM:ID]"
			class="redeventsyncitem"
			empty_replacement="(no title)"
		 />

		<field name="plugin" type="text"/>
		<field name="message" type="text"/>
	</fieldset>
</form>
