<?xml version="1.0" encoding="UTF-8"?>
<form>

	<fieldset name="event"
			  addfieldpath="/administrator/components/com_redmailflow/models/fields">
	<field
		name="id"
		type="text"
		default="0"
		label="JGLOBAL_FIELD_ID_LABEL"
		description ="JGLOBAL_FIELD_ID_DESC"
		class="readonly"
		readonly="true"	/>

	<field
		name="title"
		type="text"
		default=""
		label="COM_REDEVENT_EVENT_TITLE"
		description ="COM_REDEVENT_EVENT_TITLE"
		required="true"
		class="inputbox" />

	<field
		name="alias"
		type="text"
		default=""
		label="COM_REDEVENT_Alias"
		description ="COM_REDEVENT_Alias"
		class="inputbox" />

	<field
		name="course_code"
		type="text"
		default=""
		label="COM_REDEVENT_COURSE_CODE"
		description ="COM_REDEVENT_COURSE_CODE"
		class="inputbox" />

	<field
		name="published"
		type="list"
		class="inputbox"
		default="1"
		size="1"
		label="JSTATUS"
		description="JFIELD_PUBLISHED_DESC">
		<option
			value="1">
			JPUBLISHED</option>
		<option
			value="0">
			JUNPUBLISHED</option>
		<option
			value="-1">
			JARCHIVED</option>
	</field>

	<field
		name="language"
		type="contentlanguage"
		label="JFIELD_LANGUAGE_LABEL"
		description="COM_REDEVENT_FIELD_LANGUAGE_DESC"
		class="inputbox">
		<option value="*">JALL</option>
	</field>

	<field
		name="created_by"
		type="user"
		label="JGLOBAL_FIELD_CREATED_BY_LABEL"
		description="JGLOBAL_FIELD_CREATED_BY_DESC"
		class="inputbox"
		/>

	<field
		name="details_layout"
		type="list"
		class="inputbox"
		default="0"
		size="1"
		label="COM_REDEVENT_EVENT_LAYOUT"
		description="COM_REDEVENT_EVENT_LAYOUT_TIP">
		<option	value="0">COM_REDEVENT_DEFAULT</option>
		<option	value="1">COM_REDEVENT_EVENT_LAYOUT_TAGS</option>
		<option	value="2">COM_REDEVENT_EVENT_LAYOUT_FIXED</option>
	</field>

	<field
		name="datdescription"
		type="editor"
		label="COM_REDEVENT_EVENT_DESCRIPTION"
		description="COM_REDEVENT_EVENT_DESCRIPTION"
		class="inputbox"
		filter="safehtml"
		buttons="true"
		hide="readmore,pagebreak"/>

	<field
		name="summary"
		type="editor"
		label="COM_REDEVENT_EVENT_SUMMARY"
		description="COM_REDEVENT_EVENT_SUMMARY_DESC"
		class="inputbox"
		filter="safehtml"
		buttons="false"/>

	<field
		name="datimage"
		type="media"
		label="COM_REDEVENT_CHOOSE_IMAGE"
		description="COM_REDEVENT_CHOOSE_IMAGE"
		class="inputbox"
		directory="redevent/events"/>


		<field
			name="mailflow_id"
			type="mailflows"
			label="COM_REDEVENT_XML_FORM_EVENT_SELECT_MAILFLOW"
			description="COM_REDEVENT_XML_FORM_EVENT_SELECT_MAILFLOW_DESC"
			>
			<option value="0">COM_REDEVENT_XML_FORM_EVENT_SELECT_MAILFLOW_SELECT</option>
		</field>
	</fieldset>

	<fieldset name="activation">

		<field
			name="notify"
			type="radio"
			class="inputbox"
			default="0"
			size="1"
			label="COM_REDEVENT_ENABLE_NOTIFICATION"
			description="COM_REDEVENT_ENABLE_NOTIFICATION_TIP">
			<option	value="0">JNO</option>
			<option	value="1">JYES</option>
		</field>

		<field
			name="activate"
			type="radio"
			class="inputbox"
			default="0"
			size="1"
			label="COM_REDEVENT_ENABLE_ACTIVATION"
			description="COM_REDEVENT_ENABLE_ACTIVATION_TIP">
			<option	value="0">JNO</option>
			<option	value="1">JYES</option>
		</field>

		<field
			name="notify_subject"
			type="text"
			size="80"
			label="COM_REDEVENT_NOTIFY_SUBJECT"
			description=""
			class="inputbox" />

		<field
			name="notify_body"
			type="editor"
			size="80"
			label="COM_REDEVENT_NOTIFY_BODY"
			description="COM_REDEVENT_NOTIFY_BODY_NOTE"
			class="inputbox"
			filter="safehtml"
			buttons="true"
			hide="readmore,pagebreak"
			/>

		<field
			name="enable_activation_confirmation"
			type="radio"
			class="inputbox"
			default="0"
			size="1"
			label="COM_REDEVENT_XML_EVENT_ENABLE_ACTIVATION_CONFIRMATION_EMAIL_LABEL"
			description="COM_REDEVENT_XML_EVENT_ENABLE_ACTIVATION_CONFIRMATION_EMAIL_DESC">
			<option	value="0">JNO</option>
			<option	value="1">JYES</option>
		</field>

		<field
			name="notify_confirm_subject"
			type="text"
			size="80"
			label="COM_REDEVENT_NOTIFY_CONFIRM_SUBJECT"
			description=""
			class="inputbox" />

		<field
			name="notify_confirm_body"
			type="editor"
			label="COM_REDEVENT_NOTIFY_CONFIRM_BODY"
			description=""
			class="inputbox"
			filter="safehtml"
			buttons="true"
			hide="readmore,pagebreak"
			/>

	</fieldset>
</form>
