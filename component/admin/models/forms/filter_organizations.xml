<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
				name="search"
				type="text"
				label="COM_REDCORE_FILTER_SEARCH_DESC"
				placeholder="JSEARCH_FILTER"
				class="js-enter-submits"
				/>
		<field
				name="b2b_attendee_notification_mailflow"
				type="list"
				onchange="this.form.submit();"
				label="COM_REDEVENT_B2B_ATTENDEE_NOTIFICATION_MAILFLOW_HEADER"
				default=""
				>
			<option value="">COM_REDEVENT_B2B_ATTENDEE_NOTIFICATION_MAILFLOW_HEADER</option>
			<option value="0">COM_REDEVENT_B2B_ATTENDEE_NOTIFICATION_MAILFLOW_ATTENDEE</option>
			<option value="1">COM_REDEVENT_B2B_ATTENDEE_NOTIFICATION_MAILFLOW_ORG_ADMINS</option>
			<option value="2">COM_REDEVENT_B2B_ATTENDEE_NOTIFICATION_MAILFLOW_BOTH</option>
		</field>
	</fields>
	<fields name="list">
		<field
				name="registrations_limit"
				type="rlimitbox"
				class="inputbox input-mini chzn"
				default="25"
				label="JGLOBAL_ORDERING_LIST_LIMIT"
				description="JGLOBAL_ORDERING_LIST_LIMIT_DESC"
				onchange="this.form.submit();"/>
	</fields>
</form>
