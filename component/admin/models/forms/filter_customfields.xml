<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_REDCORE_FILTER_SEARCH_DESC"
			placeholder="JSEARCH_FILTER"
			class="js-enter-submits"
			/>

        <field
                name="type"
                type="recustomfieldtype"
                class="inputbox"
                label="COM_REDEVENT_custom_field_type"
                onchange="this.form.submit();"
                >
            <option value=''>COM_REDEVENT_FILTER_FIELD_TYPE</option>
        </field>
        <field
                name="language"
                type="language"
                onchange="this.form.submit();"
                label="COM_REDEVENT_FILTER_LANGUAGE"
                >
            <option value="">COM_REDEVENT_FILTER_LANGUAGE</option>
        </field>
	</fields>
	<fields name="list">
		<field
			name="customfields_limit"
			type="rlimitbox"
			class="inputbox input-mini chzn"
			default="25"
			label="JGLOBAL_ORDERING_LIST_LIMIT"
			description="JGLOBAL_ORDERING_LIST_LIMIT_DESC"
			onchange="this.form.submit();" />
	</fields>
</form>
