<?xml version="1.0" encoding="UTF-8"?>
<form>
	<field name="id"
		type="hidden"
		default="0"
		class="readonly"
		readonly="true"
	/>

	<field
		name="name"
		type="text"
		default=""
		label="COM_REDEVENT_NAME"
		description ="COM_REDEVENT_NAME"
		required="true"
		class="inputbox" />

	<field
		name="alias"
		type="text"
		default=""
		label="COM_REDEVENT_Alias"
		description ="COM_REDEVENT_Alias"
		class="inputbox" />

	<field
		name="language"
		type="contentlanguage"
		label="JFIELD_LANGUAGE_LABEL"
		description="COM_REDEVENT_FIELD_LANGUAGE_DESC"
		class="inputbox">
		<option value="*">JALL</option>
	</field>


	<field
		name="tooltip"
		type="text"
		default=""
		label="COM_REDEVENT_PRICEGROUPS_TOOLTIP"
		description ="COM_REDEVENT_PRICEGROUPS_TOOLTIP_TIP"
		class="inputbox" />

	<field
		name="access"
		type="accesslevel"
		label="JFIELD_ACCESS_LABEL"
		description="JFIELD_ACCESS_DESC"
		class="inputbox"/>

	<field
		name="image"
		type="rmedia"
		label="COM_REDEVENT_CHOOSE_IMAGE"
		description="COM_REDEVENT_CHOOSE_IMAGE"
		directory="redevent/categories"
		preview="true"/>

</form>
