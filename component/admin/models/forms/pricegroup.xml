<?xml version="1.0" encoding="UTF-8"?>
<form>
    <field name="id"
           type="hidden"
           default="0"
           class="readonly"
           readonly="true"
            />

	<field
		name="name"
		type="text"
		default=""
		label="COM_REDEVENT_NAME"
		description ="COM_REDEVENT_NAME"
		required="true"
		class="inputbox" />

	<field
		name="alias"
		type="text"
		default=""
		label="COM_REDEVENT_Alias"
		description ="COM_REDEVENT_Alias"
		class="inputbox" />

	<field
		name="language"
		type="contentlanguage"
		label="JFIELD_LANGUAGE_LABEL"
		description="COM_REDEVENT_FIELD_LANGUAGE_DESC"
		class="inputbox">
		<option value="*">JALL</option>
	</field>


	<field
		name="tooltip"
		type="text"
		default=""
		label="COM_REDEVENT_PRICEGROUPS_TOOLTIP"
		description ="COM_REDEVENT_PRICEGROUPS_TOOLTIP_TIP"
		class="inputbox" />

	<field
		name="adminonly"
		type="list"
		default="0"
		label="COM_REDEVENT_PRICEGROUPS_ADMINONLY"
		description="COM_REDEVENT_PRICEGROUPS_ADMINONLY_TIP"
		class="inputbox">
		<option value="0">JNO</option>
		<option value="1">JYES</option>
	</field>

	<field
		name="image"
		type="rmedia"
		label="COM_REDEVENT_CHOOSE_IMAGE"
		description="COM_REDEVENT_CHOOSE_IMAGE"
		class="inputbox"
		directory="redevent/categories"/>

</form>
