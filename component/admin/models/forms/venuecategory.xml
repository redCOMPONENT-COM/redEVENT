<?xml version="1.0" encoding="UTF-8"?>
<form>
	
	<field
		name="id"
		type="text"
		default="0"
		label="JGLOBAL_FIELD_ID_LABEL"
		description ="JGLOBAL_FIELD_ID_DESC"
		class="readonly"
		readonly="true"	/>
	
	<field
		name="name"
		type="text"
		default=""
		label="COM_REDEVENT_CATEGORY"
		description ="COM_REDEVENT_CATEGORY" 
		required="true" 
		class="inputbox" />
	
	<field
		name="alias"
		type="text"
		default=""
		label="COM_REDEVENT_Alias"
		description ="COM_REDEVENT_Alias"
		class="inputbox" />
	
	<field
		name="parent_id"
		type="revenuecategory"
		default=""
		label="COM_REDEVENT_PARENT_CATEGORY"
		description ="COM_REDEVENT_PARENT_CATEGORY"
		reset="1"
		class="inputbox" />
		
	<field
		name="published"
		type="list"
		class="inputbox"
		default="1"
		size="1"
		label="JSTATUS"
		description="JFIELD_PUBLISHED_DESC">
		<option
			value="1">
			JPUBLISHED</option>
		<option
			value="0">
			JUNPUBLISHED</option>
	</field>

	<field
		name="language"
		type="contentlanguage"
		label="JFIELD_LANGUAGE_LABEL"
		description="COM_REDEVENT_FIELD_LANGUAGE_DESC"
		class="inputbox">
		<option value="*">JALL</option>
	</field>
		
	<field
		name="description"
		type="editor"
		label="COM_REDEVENT_DESCRIPTION"
		description="COM_REDEVENT_DESCRIPTION"
		class="inputbox"
		filter="safehtml"
		buttons="true"
		hide="readmore,pagebreak"/>
		
	<field
		name="image"
		type="media"
		label="COM_REDEVENT_CHOOSE_IMAGE"
		description="COM_REDEVENT_CHOOSE_IMAGE"
		class="inputbox"
		directory="redevent/categories"/>
		
	<field
		name="access"
		type="accesslevel"
		label="JFIELD_ACCESS_LABEL"
		description="JFIELD_ACCESS_DESC"
		class="span12 small"/>
			
	<field name="asset_id" type="hidden" filter="unset" />
	
	<field name="rules"
	       type="rules"
	       label="COM_REDEVENT_EVENTS_MANAGE_RULES_LABEL"
	       translate_label="true"
	       filter="rules"
	       validate="rules"
	       class="inputbox"
	       component="com_redevent"
	       section="venuecategory"
	/>
</form>
