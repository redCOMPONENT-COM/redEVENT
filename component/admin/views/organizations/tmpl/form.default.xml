<?xml version="1.0" encoding="utf-8"?>
<form
	lessfiles="media://com_redevent/css/backend.less||media://com_redevent/css/backend.css"
	type="browse"
	show_header="1"
	show_filters="1"
	show_pagination="1"
	norows_placeholder="COM_redevent_COMMON_NORECORDS"
>
	<headerset>
		<header name="id" type="rowselect" tdwidth="20" />

		<header name="organization_name" type="fieldsearchable" label="COM_REDEVENT_NAME"
                sortable="true"
			buttons="yes" buttonclass="btn"
		/>

        <header name="b2b_attendee_notification_mailflow" type="fieldselectable" sortable="true" label="COM_REDEVENT_B2B_ATTENDEE_NOTIFICATION_MAILFLOW_HEADER">
            <option value="0">COM_REDEVENT_B2B_ATTENDEE_NOTIFICATION_MAILFLOW_ATTENDEE</option>
            <option value="1">COM_REDEVENT_B2B_ATTENDEE_NOTIFICATION_MAILFLOW_ORG_ADMINS</option>
            <option value="2">COM_REDEVENT_B2B_ATTENDEE_NOTIFICATION_MAILFLOW_BOTH</option>
        </header>

        <header name="b2b_cancellation_period" type="text" sortable="true" label="COM_REDEVENT_ORGANIZATION_B2B_CANCELLATION_PERIOD"/>
	</headerset>

	<fieldset name="items">
		<field name="id" type="selectrow"/>

		<field name="name" type="text"
			show_link="true"
			url="index.php?option=com_redevent&amp;view=organization&amp;id=[ITEM:ID]"
			class="redeventrole"
			empty_replacement="(no title)"
		 />

        <field name="b2b_attendee_notification_mailflow" type="list">
            <option value="0">COM_REDEVENT_B2B_ATTENDEE_NOTIFICATION_MAILFLOW_ATTENDEE</option>
            <option value="1">COM_REDEVENT_B2B_ATTENDEE_NOTIFICATION_MAILFLOW_ORG_ADMINS</option>
            <option value="2">COM_REDEVENT_B2B_ATTENDEE_NOTIFICATION_MAILFLOW_BOTH</option>
        </field>

        <field name="b2b_cancellation_period" type="text"/>
    </fieldset>
</form>
