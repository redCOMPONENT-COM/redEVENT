<?xml version="1.0"?>
<contentelement type="contentelement">
	<name>redEVENT bundles</name>
	<author>redCOMPONENT</author>
	<copyright>Copyright (C) 2008 - 2016 redCOMPONENT.com. All rights reserved.</copyright>
	<version>3.2.1</version>
	<description>Bundles Table Definition for the redEVENT extension</description>
	<reference>
		<table name="redevent_bundle">
			<field name="id" type="referenceid" translate="0" alwaysFallback="false" filter="RAW" description="">ID</field>
			<field name="name" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Name</field>
			<field name="alias" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Alias</field>
			<field name="description" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Description</field>
		</table>

		<component>
			<editForm admin="true" option="com_redevent" view="bundle" layout="edit" identifier="id" showbutton="true" htmlposition=".btn-toolbar:first .btn-group:first" checkoriginalid="false"/>
		</component>
	</reference>
</contentelement>
