<?xml version="1.0"?>
<contentelement type="contentelement">
	<name>redEVENT custom tags</name>
	<author>redCOMPONENT</author>
	<copyright>Copyright (C) 2008 - 2016 redCOMPONENT.com. All rights reserved.</copyright>
	<version>3.2.1</version>
	<description>Custom tags Table Definition for the redEVENT extension</description>
	<reference>
		<table name="redevent_textlibrary">
			<field name="id" type="referenceid" translate="0" alwaysFallback="false" filter="RAW" description="">ID</field>
			<field name="text_name" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Tag</field>
			<field name="text_description" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Description</field>
			<field name="text_field" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Content</field>
		</table>

		<component>
			<editForm admin="true" option="com_redevent" view="textlibrary" layout="edit" identifier="id" showbutton="true" htmlposition=".btn-toolbar:first .btn-group:first" checkoriginalid="false"/>
		</component>
	</reference>
</contentelement>
