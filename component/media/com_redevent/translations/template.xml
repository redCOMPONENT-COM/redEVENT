<?xml version="1.0"?>
<contentelement type="contentelement">
	<name>redEVENT templates</name>
	<author>redCOMPONENT</author>
	<copyright>Copyright (C) 2008 - 2016 redCOMPONENT.com. All rights reserved.</copyright>
	<version>3.2.1</version>
	<description>Templates Table Definition for the redEVENT extension</description>
	<reference>
		<table name="redevent_event_template">
			<field name="id" type="referenceid" translate="0" alwaysFallback="false" filter="RAW" description="">ID</field>
			<field name="name" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Name</field>
			<field name="meta_keywords" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Meta keywords</field>
			<field name="meta_description" type="textarea" translate="1" alwaysFallback="false" filter="RAW" description="">Meta description</field>
			<field name="notify_subject" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Notify mail subject</field>
			<field name="notify_body" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Notify mail body</field>
			<field name="notify_on_list_subject" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Attending mail subject</field>
			<field name="notify_on_list_body" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Attending mail body</field>
			<field name="notify_off_list_subject" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Waiting list mail subject</field>
			<field name="notify_off_list_body" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Waiting list mail body</field>
			<field name="notify_confirm_subject" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Confirmation mail subject</field>
			<field name="notify_confirm_body" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Confirmation mail body</field>
			<field name="confirmation_message" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Confirmation page text</field>
			<field name="submission_type_email" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Email registration text</field>
			<field name="submission_type_external" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">External registration text</field>
			<field name="submission_type_phone" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Phone registration text</field>
			<field name="submission_type_formal_offer" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Formal offer registration text</field>
			<field name="submission_type_formal_offer_subject" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Formal offer registration mail subject</field>
			<field name="submission_type_formal_offer_body" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Formal offer registration mail body</field>
			<field name="submission_type_formal_offer_pdf" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Formal offer registration mail PDF</field>
			<field name="submission_type_webform" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Online form registration text</field>
			<field name="submission_type_email_subject" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Email registration email subject</field>
			<field name="submission_type_email_body" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Email registration email body</field>
			<field name="submission_type_email_pdf" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Email registration email pdf</field>
			<field name="review_message" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Online registration review tex</field>
			<field name="submission_type_webform_formal_offer" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Formal offer registration text</field>
			<field name="paymentaccepted" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Payment accepted page text</field>
			<field name="paymentprocessing" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Payment processing page text</field>
		</table>

		<component>
			<editForm admin="true" option="com_redevent" view="template" layout="edit" identifier="id" showbutton="true" htmlposition=".btn-toolbar:first .btn-group:first" checkoriginalid="false"/>
		</component>
	</reference>
</contentelement>
