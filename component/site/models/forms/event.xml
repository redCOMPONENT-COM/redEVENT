<?xml version="1.0" encoding="UTF-8"?>
<form>

	<fieldset name="event"
              addfieldpath="/administrator/components/com_redmailflow/models/fields">

        <field name="id"
               type="hidden"
               default="0"
               class="readonly"
               readonly="true"
                />

        <field
            name="title"
            type="text"
            default=""
            label="COM_REDEVENT_EVENT_TITLE"
            description ="COM_REDEVENT_EVENT_TITLE"
            required="true"
            class="inputbox" />

        <field
            name="alias"
            type="text"
            default=""
            label="COM_REDEVENT_Alias"
            description ="COM_REDEVENT_Alias"
            class="inputbox" />

        <field
            name="course_code"
            type="text"
            default=""
            label="COM_REDEVENT_COURSE_CODE"
            description ="COM_REDEVENT_COURSE_CODE"
            class="inputbox" />

        <field
            name="published"
            type="list"
            class="inputbox"
            default="1"
            size="1"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC">
            <option
                value="1">
                JPUBLISHED</option>
            <option
                value="0">
                JUNPUBLISHED</option>
            <option
                value="-1">
                JARCHIVED</option>
        </field>

        <field
            name="language"
            type="contentlanguage"
            label="JFIELD_LANGUAGE_LABEL"
            description="COM_REDEVENT_FIELD_LANGUAGE_DESC"
            class="inputbox">
            <option value="*">JALL</option>
        </field>

        <field
            name="created_by"
            type="user"
            label="JGLOBAL_FIELD_CREATED_BY_LABEL"
            description="JGLOBAL_FIELD_CREATED_BY_DESC"
            class="inputbox"
            />

        <field
                name="enable_ical"
                type="radio"
                class="inputbox"
                default="0"
                size="1"
                label="COM_REDEVENT_EVENT_ENABLE_ICAL_LABEL"
                description="">
            <option	value="0">JNO</option>
            <option	value="1">JYES</option>
        </field>

        <field
                name="categories"
                type="remanagedcategorylist"
                label="COM_REDEVENT_CATEGORY"
                description ="COM_REDEVENT_CATEGORY"
                required="true"
                multiple="true"
                size="10"
                class="inputbox" />

        <field
            name="details_layout"
            type="list"
            class="inputbox"
            default="0"
            size="1"
            label="COM_REDEVENT_EVENT_LAYOUT"
            description="COM_REDEVENT_EVENT_LAYOUT_TIP">
            <option	value="0">COM_REDEVENT_DEFAULT</option>
            <option	value="1">COM_REDEVENT_EVENT_LAYOUT_TAGS</option>
            <option	value="2">COM_REDEVENT_EVENT_LAYOUT_FIXED</option>
        </field>

        <field
            name="datdescription"
            type="editor"
            label="COM_REDEVENT_EVENT_DESCRIPTION"
            description="COM_REDEVENT_EVENT_DESCRIPTION"
            class="inputbox"
            filter="JComponentHelper::filterText"
            buttons="true"
            hide="readmore,pagebreak"/>

        <field
            name="summary"
            type="editor"
            label="COM_REDEVENT_EVENT_SUMMARY"
            description="COM_REDEVENT_EVENT_SUMMARY_DESC"
            class="inputbox"
            filter="JComponentHelper::filterText"
            buttons="false"/>

        <field
            name="datimage"
            type="rmedia"
            label="COM_REDEVENT_CHOOSE_IMAGE"
            description="COM_REDEVENT_CHOOSE_IMAGE"
            directory="redevent/events"
            preview="true"/>


        <field
            name="mailflow_id"
            type="mailflows"
            label="COM_REDEVENT_XML_FORM_EVENT_SELECT_MAILFLOW"
            description="COM_REDEVENT_XML_FORM_EVENT_SELECT_MAILFLOW_DESC"
            >
            <option value="0">COM_REDEVENT_XML_FORM_EVENT_SELECT_MAILFLOW_SELECT</option>
        </field>
    </fieldset>

    <fieldset name="registra">
        <field
                name="registra"
                type="radio"
                class="inputbox"
                default="0"
                size="1"
                label="COM_REDEVENT_ENABLE_REGISTRATION"
                description="COM_REDEVENT_ENABLE_REGISTRATION_TIP">
            <option	value="0">JNO</option>
            <option	value="1">JYES</option>
        </field>
        <field
                name="unregistra"
                type="radio"
                class="inputbox"
                default="0"
                size="1"
                label="COM_REDEVENT_ENABLE_UNREGISTRATION"
                description="COM_REDEVENT_ENABLE_UNREGISTRATION_TIP">
            <option	value="0">JNO</option>
            <option	value="1">JYES</option>
        </field>
        <field
                name="juser"
                type="radio"
                class="inputbox"
                default="0"
                size="1"
                label="COM_REDEVENT_CREATE_JOOMLA_USER"
                description="COM_REDEVENT_CREATE_JOOMLA_USER_TIP">
            <option	value="0">JNO</option>
            <option	value="1">JYES</option>
        </field>

        <field
                name="redform_id"
                type="RedformForm"
                class="inputbox"
                default="0"
                size="1"
                label="COM_REDEVENT_REDFORM_FORM_ID"
                description="COM_REDEVENT_REDFORM_FORM_ID"
                />
        <field
                name="max_multi_signup"
                type="text"
                class="inputbox validate-integer"
                default="0"
                size="15"
                label="COM_REDEVENT_MAX_MULTI_SIGNUP"
                description="COM_REDEVENT_MAX_MULTI_SIGNUP_TIP"
                />
        <field
                name="show_names"
                type="radio"
                class="inputbox"
                default="0"
                size="1"
                label="COM_REDEVENT_SHOW_REGISTERED_FRONTEND"
                description="COM_REDEVENT_SHOW_REGISTERED_FRONTEND_TIP">
            <option	value="0">JNO</option>
            <option	value="1">JYES</option>
        </field>

        <field
                name="showfields"
                type="RedformField"
                class="inputbox"
                multiple="true"
                label="COM_REDEVENT_REDFORM_FORM_SELECT_FIELDS"
                description="COM_REDEVENT_REDFORM_FORM_SELECT_FIELDS_TIP"
                />
    </fieldset>

    <fieldset name="activation">
        <field
            name="notify"
            type="radio"
            class="inputbox"
            default="0"
            label="COM_REDEVENT_ENABLE_NOTIFICATION"
            description="COM_REDEVENT_ENABLE_NOTIFICATION_TIP">
            <option	value="0">JNO</option>
            <option	value="1">JYES</option>
        </field>

        <field
            name="activate"
            type="radio"
            class="inputbox"
            default="0"
            size="1"
            label="COM_REDEVENT_ENABLE_ACTIVATION"
            description="COM_REDEVENT_ENABLE_ACTIVATION_TIP">
            <option	value="0">JNO</option>
            <option	value="1">JYES</option>
        </field>

        <field
            name="notify_subject"
            type="text"
            size="80"
            label="COM_REDEVENT_NOTIFY_SUBJECT"
            description=""
            class="inputbox" />

        <field
            name="notify_body"
            type="editor"
            size="80"
            label="COM_REDEVENT_NOTIFY_BODY"
            description="COM_REDEVENT_NOTIFY_BODY_NOTE"
            class="inputbox"
            filter="JComponentHelper::filterText"
            buttons="true"
            hide="readmore,pagebreak"
            />

        <field
            name="enable_activation_confirmation"
            type="radio"
            class="inputbox"
            default="0"
            size="1"
            label="COM_REDEVENT_XML_EVENT_ENABLE_ACTIVATION_CONFIRMATION_EMAIL_LABEL"
            description="COM_REDEVENT_XML_EVENT_ENABLE_ACTIVATION_CONFIRMATION_EMAIL_DESC">
            <option	value="0">JNO</option>
            <option	value="1">JYES</option>
        </field>

        <field
            name="notify_confirm_subject"
            type="text"
            size="80"
            label="COM_REDEVENT_NOTIFY_CONFIRM_SUBJECT"
            description=""
            class="inputbox" />

        <field
            name="notify_confirm_body"
            type="editor"
            label="COM_REDEVENT_NOTIFY_CONFIRM_BODY"
            description=""
            class="inputbox"
            filter="JComponentHelper::filterText"
            buttons="true"
            hide="readmore,pagebreak"
            />
    </fieldset>

    <fieldset name="confirmation">
        <field
                name="notify_off_list_subject"
                type="text"
                size="80"
                label="COM_REDEVENT_NOTIFY_ATTENDING_SUBJECT"
                description=""
                class="inputbox" />

        <field
                name="notify_off_list_body"
                type="editor"
                size="80"
                label="COM_REDEVENT_NOTIFY_ATTENDING_BODY"
                description="COM_REDEVENT_NOTIFY_ATTENDING_NOTE"
                class="inputbox"
                filter="JComponentHelper::filterText"
                buttons="true"
                hide="readmore,pagebreak"
                />

        <field
                name="notify_on_list_subject"
                type="text"
                size="80"
                label="COM_REDEVENT_NOTIFY_ON_LIST_SUBJECT"
                description=""
                class="inputbox" />

        <field
                name="notify_on_list_body"
                type="editor"
                size="80"
                label="COM_REDEVENT_NOTIFY_ON_LIST_BODY"
                description="COM_REDEVENT_NOTIFY_ON_LIST_NOTE"
                class="inputbox"
                filter="JComponentHelper::filterText"
                buttons="true"
                hide="readmore,pagebreak"
                />
    </fieldset>

    <fieldset name="payment">
        <field
                name="paymentprocessing"
                type="editor"
                size="80"
                label="COM_REDEVENT_PAYMENTPROCESSING"
                description="COM_REDEVENT_PAYMENTPROCESSING_TIP"
                class="inputbox"
                filter="JComponentHelper::filterText"
                buttons="true"
                hide="readmore,pagebreak"
                />

        <field
                name="paymentaccepted"
                type="editor"
                size="80"
                label="COM_REDEVENT_PAYMENTACCEPTED"
                description="COM_REDEVENT_PAYMENTACCEPTED_INFO"
                class="inputbox"
                filter="JComponentHelper::filterText"
                buttons="true"
                hide="readmore,pagebreak"
                />
    </fieldset>
</form>
