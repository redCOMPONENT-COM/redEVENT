<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_REDEVENT_VENUES_LAYOUT">
		<message>
			<![CDATA[COM_REDEVENT_VENUES_LAYOUT_DESC]]>
		</message>
	</layout>

	<fields name="params" addfieldpath="/libraries/redevent/form/fields">
		<fieldset name="params" label="COM_REDEVENT_FIELDSET_LAYOUT_OPTIONS">
			<field name="categoryid" type="revenuecategorylist" label="COM_REDEVENT_SELECT_VENUE_CATEGORY" description="COM_REDEVENT_SELECT_VENUE_CATEGORY_DESC"/>
			<field name="display_venues_num" type="text" size="2" default="5" label="COM_REDEVENT_VENUE_NUMBER" description="COM_REDEVENT_VENUE_NUMBER_TIP" />
			<field name="display_all_venues" type="radio" default="1" label="COM_REDEVENT_DISPLAY_ALL_VENUES" description="COM_REDEVENT_DISPLAY_ALL_VENUES_TIP">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</field>

			<field name="show_pagination" type="list"
				description="JGLOBAL_PAGINATION_DESC"
				label="JGLOBAL_PAGINATION_LABEL"
			>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
				<option value="2">JGLOBAL_AUTO</option>
			</field>

			<field name="show_pagination_results" type="list"
				label="JGLOBAL_PAGINATION_RESULTS_LABEL"
				description="JGLOBAL_PAGINATION_RESULTS_DESC">

				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="display_num" type="list" default="" label="COM_REDEVENT_EVENT_NUMBER"
				   description="COM_REDEVENT_EVENT_NUMBER_TIP">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="5">5</option>
				<option value="10">10</option>
				<option value="15">15</option>
				<option value="20">20</option>
				<option value="25">25</option>
				<option value="30">30</option>
				<option value="50">50</option>
				<option value="100">100</option>
				<option value="200">200</option>
			</field>
		</fieldset>
	</fields>
</metadata>
