<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_REDEVENT_Categoryevents_thumb_Layout">
		<message>
			<![CDATA[COM_REDEVENT_CATEGORYEVENTS_THUMB_LAYOUT_DESC]]>
		</message>
	</layout>
	<fields name="request" addfieldpath="/libraries/redevent/form/fields">
   	<fieldset name="request" label="COM_REDEVENT_FIELDSET_LAYOUT_OPTIONS">
			<field name="id" type="recategorylist" default="0" label="COM_REDEVENT_SELECT_CATEGORY" description="COM_REDEVENT_SELECT_CATEGORY_DESC" required="true"/>
		</fieldset>

   	<fieldset name="params" label="COM_REDEVENT_FIELDSET_LAYOUT_OPTIONS">

		<field name="session_state" type="list" default="0" label="COM_REDEVENT_VIEW_FILTER_SESSION_STATE" description="COM_REDEVENT_VIEW_FILTER_SESSION_STATE_DESC">
			<option value="0">COM_REDEVENT_VIEW_FILTER_EVENT_STATE_ALL</option>
			<option value="1">COM_REDEVENT_VIEW_FILTER_EVENT_STATE_UPCOMINGS</option>
			<option value="2">COM_REDEVENT_VIEW_FILTER_EVENT_STATE_OPENDATE</option>
		</field>

		<field name="session_orderby" type="list" default="" label="COM_REDEVENT_VIEW_SESSION_ORDERBY" description="COM_REDEVENT_VIEW_SESSION_ORDERBY_DESC">
			<option value="">JDEFAULT</option>
			<option value="x.dates">COM_REDEVENT_VIEW_SESSION_ORDERBY_DATES</option>
		</field>

		<field name="session_orderby_dir" type="list" default="" label="COM_REDEVENT_VIEW_SESSION_ORDERBY_DIR" description="COM_REDEVENT_VIEW_SESSION_ORDERBY_DIR_DESC">
			<option value="default">JDEFAULT</option>
			<option value="ASC">COM_REDEVENT_VIEW_SESSION_ORDERBY_DIR_ASCENDING</option>
			<option value="DESC">COM_REDEVENT_VIEW_SESSION_ORDERBY_DIR_DESCENDING</option>
		</field>

		<field name="show_pagination" type="list"
			description="JGLOBAL_PAGINATION_DESC"
			label="JGLOBAL_PAGINATION_LABEL"
		>
			<option value="">JGLOBAL_USE_GLOBAL</option>
			<option value="0">JHIDE</option>
			<option value="1">JSHOW</option>
			<option value="2">JGLOBAL_AUTO</option>
		</field>

		<field name="show_pagination_results" type="list"
			label="JGLOBAL_PAGINATION_RESULTS_LABEL"
			description="JGLOBAL_PAGINATION_RESULTS_DESC">

			<option value="">JGLOBAL_USE_GLOBAL</option>
			<option value="0">JHIDE</option>
			<option value="1">JSHOW</option>
		</field>


		<field name="display_num" type="list" default="" label="COM_REDEVENT_EVENT_NUMBER"
			   description="COM_REDEVENT_EVENT_NUMBER_TIP">
			<option value="">JGLOBAL_USE_GLOBAL</option>
			<option value="5">5</option>
			<option value="10">10</option>
			<option value="15">15</option>
			<option value="20">20</option>
			<option value="25">25</option>
			<option value="30">30</option>
			<option value="50">50</option>
			<option value="100">100</option>
			<option value="200">200</option>
		</field>
   	</fieldset>
	</fields>
</metadata>
