        <option value="1">Yes</option>
      </field>
      <field name="show_empty_venues" type="radio" default="0" label="COM_REDEVENT_DISPLAY_EMPTY_VENUES" description="COM_REDEVENT_DISPLAY_EMPTY_VENUES_DESC">
