<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.7.0" method="upgrade">
	<name>COM_REDEVENT</name>
	<creationDate>##DATE##</creationDate>
	<author>redWEB Aps</author>
	<authorEmail>email@redweb.dk</authorEmail>
	<authorUrl>www.redcomponent.com</authorUrl>
	<copyright>(C) 2008 - 2012 redCOMPONENT.com</copyright>
	<license>GNU/GPL</license>
	<version>##VERSION##</version>
	<description>COM_REDEVENT_XML_DESCRIPTION</description>
	
	
	<!-- Runs on install/uninstall/update -->
	<scriptfile>install.php</scriptfile>
	
  <!-- Install Database Section -->
 	<install>
 		  <sql>
           <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
 		  </sql>
 	</install>
  <!-- Uninstall Database Section -->
 	<uninstall>
		  <sql>
           <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		  </sql>
 	</uninstall>	
	<update> <!-- Runs on update; New in 1.6 -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>
	
	<files folder="site">
		<filename>index.html</filename>
		<filename>redevent.php</filename>
		<filename>controller.php</filename>
		<filename>router.php</filename>
		<filename>LICENSE.php</filename>
		<folder>assets</folder>
		<folder>classes</folder>
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>language</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>

	<!-- media files -->
	<media folder="media">
		<folder>com_redevent</folder>
	</media>
	
	<administration>

		<menu img="../media/com_redevent/images/redevent.png">redEVENT</menu>
		<submenu>
			<menu img="../media/com_redevent/images/icon-16-events.png" view="events">COM_REDEVENT_MENU_EVENTS</menu>
			<menu img="../media/com_redevent/images/icon-16-sessions.png" view="sessions">COM_REDEVENT_MENU_SESSIONS</menu>
			<menu img="../media/com_redevent/images/icon-16-venues.png" view="venues">COM_REDEVENT_MENU_VENUES</menu>
			<menu img="../media/com_redevent/images/icon-16-categories.png" view="categories">COM_REDEVENT_MENU_CATEGORIES</menu>
			<menu img="../media/com_redevent/images/icon-16-venuescategories.png" view="venuescategories">COM_REDEVENT_MENU_VENUES_CATEGORIES</menu>
			<menu img="../media/com_redevent/images/icon-16-library.png" view="textlibrary">COM_REDEVENT_MENU_TAGS_LIBRARY</menu>
			<menu img="../media/com_redevent/images/icon-16-customfields.png" view="customfields">COM_REDEVENT_MENU_CUSTOMFIELDS</menu>
		</submenu>
	
		<files folder="admin">
			<filename>access.xml</filename>
			<filename>changelog.txt</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>dispatcher.php</filename>
			<filename>index.html</filename>
			<filename>redevent.php</filename>
			<filename>toolbar.php</filename>
			<folder>classes</folder>
			<folder>customfield</folder>
			<folder>assets</folder>
			<folder>extras</folder>
			<folder>views</folder>
			<folder>models</folder>
			<folder>controllers</folder>
			<folder>elements</folder>
			<folder>sql</folder>
			<folder>language</folder>
			<folder>tables</folder>
		</files>
		
	</administration>
	
	<!-- UPDATESERVER DEFINITION -->
	<updateservers>
		<!-- Note: No spaces or linebreaks allowed between the server tags -->
		<server type="extension" priority="1" name="redEVENT Update Site">http://www.redcomponent.com/updates/redevent-update.xml</server>
	</updateservers>
		
	<!-- Plugins here -->
	<plugins>
		<plugin folder="admin/extras/plugins/redform_integration" plugin="redevent" group="redform_integration" />
	</plugins>
</extension>
