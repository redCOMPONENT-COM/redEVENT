<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://www.joomla.org/xml/dtd/1.5/component-install.dtd">
<install type="component" version="1.5" method="upgrade">
	<name>redEVENT</name>
	<creationDate>19-04-2010</creationDate>
	<author>Redweb.dk</author>
	<authorEmail>email@redweb.dk</authorEmail>
	<authorUrl>www.redweb.dk</authorUrl>
	<copyright>(c) 2008 - 2009 Redweb.dk</copyright>
	<license>GNU/GPL</license>
	<version>2.0 beta 9.1b</version>
	<description>redEVENT Event and Calendar Component for Joomla 1.5 by redCOMPONENT.com</description>
	<installfile>install.redevent.php</installfile>
	<uninstallfile>uninstall.redevent.php</uninstallfile>
	
	<install>
		<sql>
			<file driver="mysql" charset="utf8">install.mysql.utf8.sql</file>
		</sql>
	</install>

	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>

	<files folder="site">
		<filename>index.html</filename>
		<filename>redevent.php</filename>
		<filename>controller.php</filename>
		<filename>router.php</filename>
		<filename>LICENSE.php</filename>
		<folder>assets</folder>
		<folder>classes</folder>
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>

	<languages folder="site/languages">
		<language tag="en-GB">en-GB.com_redevent.ini</language>
	</languages>

	<administration>

	<menu img="../administrator/components/com_redevent/assets/images/redevent.png">redEVENT</menu>
	<submenu>
		<menu img="../administrator/components/com_redevent/assets/images/icon-16-events.png" view="events">REDEVENT_MENU_EVENTS</menu>
		<menu img="../administrator/components/com_redevent/assets/images/icon-16-venues.png" view="venues">REDEVENT_MENU_VENUES</menu>
		<menu img="../administrator/components/com_redevent/assets/images/icon-16-categories.png" view="categories">REDEVENT_MENU_CATEGORIES</menu>
		<menu img="../administrator/components/com_redevent/assets/images/icon-16-venuescategories.png" view="venuescategories">REDEVENT_MENU_VENUES_CATEGORIES</menu>
		<menu img="../administrator/components/com_redevent/assets/images/icon-16-accessgroups.png" view="groups">REDEVENT_MENU_GROUPS</menu>
		<menu img="../administrator/components/com_redevent/assets/images/icon-16-library.png" view="textlibrary">REDEVENT_MENU_TAGS_LIBRARY</menu>
		<menu img="../administrator/components/com_redevent/assets/images/icon-16-customfields.png" view="customfields">REDEVENT_MENU_CUSTOMFIELDS</menu>
		<menu img="../administrator/components/com_redevent/assets/images/icon-16-settings.png" view="settings">REDEVENT_MENU_SETTINGS</menu>
	</submenu>

	<files folder="admin">
		<filename>changelog.txt</filename>
		<filename>index.html</filename>
		<filename>admin.redevent.php</filename>
		<filename>controller.php</filename>
		<filename>config.xml</filename>
		<filename>install.mysql.utf8.sql</filename>
		<filename>uninstall.mysql.utf8.sql</filename>
		<folder>classes</folder>
		<folder>customfield</folder>
		<folder>assets</folder>
		<folder>extras</folder>
		<folder>help</folder>
		<folder>views</folder>
		<folder>models</folder>
		<folder>controllers</folder>
		<folder>elements</folder>
		<folder>tables</folder>
	</files>

	<languages folder="admin/languages">
		<language tag="en-GB">en-GB.com_redevent.ini</language>
		<language tag="en-GB">en-GB.com_redevent.menu.ini</language>
	</languages>

</administration>
</install>