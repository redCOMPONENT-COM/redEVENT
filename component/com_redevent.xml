	<!-- Plugins here -->
	<plugins>
		<plugin folder="admin/extras/plugins/redform_integration" plugin="redevent" group="redform_integration" />
	</plugins>

	<!-- Libraries to install -->
	<libraries>
		<library name="redevent"/>
	</libraries>
</extension>
