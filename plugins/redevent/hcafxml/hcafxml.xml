<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="redevent" method="upgrade">
	<name>PLG_REDEVENT_HCAFXML</name>
	<creationDate>##DATE##</creationDate>
	<author>redWEB Aps</author>
	<authorEmail>email@redweb.dk</authorEmail>
	<authorUrl>www.redcomponent.com</authorUrl>
	<copyright>(C) 2013 redCOMPONENT.com</copyright>
	<license>GNU/GPL</license>
	<version>##VERSION##</version>
	<description>PLG_REDEVENT_HCAFXML_XML_DESCRIPTION</description>

	<files>
		<file plugin="hcafxml">hcafxml.php</file>
		<filename>index.html</filename>
		<folder>language</folder>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
						name="provider_name"
						type="text"
						label="PLG_REDEVENT_HCAFXML_XML_PROVIDER_NAME"
						desc="PLG_REDEVENT_HCAFXML_XML_PROVIDER_NAME_DESC"
						required="true"
						/>
				<field
						name="provider_email"
						type="text"
						label="PLG_REDEVENT_HCAFXML_XML_PROVIDER_EMAIL"
						desc="PLG_REDEVENT_HCAFXML_XML_PROVIDER_EMAIL_DESC"
						required="true"
						/>
				<field
						name="provider_phone"
						type="text"
						label="PLG_REDEVENT_HCAFXML_XML_PROVIDER_PHONE"
						desc="PLG_REDEVENT_HCAFXML_XML_PROVIDER_PHONE_DESC"
						required="true"
						/>
				<field
						name="limit"
						type="text"
						label="PLG_REDEVENT_HCAFXML_XML_LIMIT"
						desc="PLG_REDEVENT_HCAFXML_XML_LIMIT_DESC"
						default="0"
						/>
			</fieldset>
		</fields>
	</config>
</extension>
