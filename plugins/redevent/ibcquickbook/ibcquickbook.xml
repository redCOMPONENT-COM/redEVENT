	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="employedFieldMapping" type="text"
					label="PLG_REDEVENT_IBCQUICKBOOK_XML_EMPLOYEDFIELDMAPPING_LABEL"
					description="PLG_REDEVENT_IBCQUICKBOOK_XML_EMPLOYEDFIELDMAPPING_DESCRIPTION"
