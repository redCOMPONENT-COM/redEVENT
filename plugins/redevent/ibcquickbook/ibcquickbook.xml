					/>

				<field name="redformMapping" type="textarea"
					label="PLG_REDEVENT_IBCQUICKBOOK_XML_REDFORMMAPPING_LABEL"
					description="PLG_REDEVENT_IBCQUICKBOOK_XML_REDFORMMAPPING_DESCRIPTION"
					rows="10" cols="50"
					/>

				<field name="notification" type="textarea"
					   label="PLG_REDEVENT_IBCQUICKBOOK_XML_NOTIFICATION_LABEL"
					   description="PLG_REDEVENT_IBCQUICKBOOK_XML_NOTIFICATION_DESCRIPTION"
					   rows="10" cols="50"
						/>

				<field name="unemployedMailflowFieldId" type="text"
					   label="PLG_REDEVENT_IBCQUICKBOOK_XML_UNEMPLOYEDMAILFLOWID_LABEL"
					   description="PLG_REDEVENT_IBCQUICKBOOK_XML_UNEMPLOYEDMAILFLOWID_DESCRIPTION"
						/>

				<field name="otherMailflowFieldId" type="text"
					   label="PLG_REDEVENT_IBCQUICKBOOK_XML_OTHERMAILFLOWID_LABEL"
