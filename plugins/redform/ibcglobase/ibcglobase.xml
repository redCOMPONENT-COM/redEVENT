<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="redform" method="upgrade">
	<name>PLG_REDFORM_IBCGLOBASE_PLUGIN</name>
	<creationDate>##DATE##</creationDate>
	<author>redWEB Aps</author>
	<authorEmail>email@redweb.dk</authorEmail>
	<authorUrl>www.redcomponent.com</authorUrl>
	<copyright>(C) 2014 redCOMPONENT.com</copyright>
	<license>GNU/GPL</license>
	<version>##VERSION##</version>
	<description>PLG_REDFORM_IBCGLOBASE_PLUGIN_DESC</description>

	<files>
		<filename plugin="ibcglobase">ibcglobase.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field type="text" name="ws_username"
					label="PLG_REDFORM_IBCGLOBASE_XML_WS_USERNAME_LABEL"
					description="PLG_REDFORM_IBCGLOBASE_XML_WS_USERNAME_DESCRIPTION"
					/>
				<field type="password" name="ws_password"
					   label="PLG_REDFORM_IBCGLOBASE_XML_WS_PASSWORD_LABEL"
					   description="PLG_REDFORM_IBCGLOBASE_XML_WS_PASSWORD_DESCRIPTION"
						/>
				<field type="text" name="subscribeFieldId"
					label="PLG_REDFORM_IBCGLOBASE_XML_SUBSCRIBEFIELDID_LABEL"
					description="PLG_REDFORM_IBCGLOBASE_XML_SUBSCRIBEFIELDID_DESCRIPTION"
					/>
				<field type="text" name="listId"
					label="PLG_REDFORM_IBCGLOBASE_XML_LISTID_LABEL"
					description="PLG_REDFORM_IBCGLOBASE_XML_LISTID_DESCRIPTION"
					/>
				<field type="textarea" name="redformMapping"
					   label="PLG_REDFORM_IBCGLOBASE_XML_REDFORMMAPPING_LABEL"
					   description="PLG_REDFORM_IBCGLOBASE_XML_REDFORMMAPPING_DESCRIPTION"
					   rows="10" cols="50"
						/>
			</fieldset>
		</fields>
	</config>

</extension>
