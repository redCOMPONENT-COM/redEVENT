<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="1.7"
	client="site"
	method="upgrade">
	<name>MOD_REDEVENT_CALENDAR</name>
	<creationDate>jan, 2012</creationDate>
	<author>redWEB Aps</author>
	<authorEmail>email@redweb.dk</authorEmail>
	<authorUrl>www.redcomponent.com</authorUrl>
	<copyright>(C) 2008 - 2012 redCOMPONENT.com</copyright>
	<license>GNU/GPL</license>
	<version>2.5</version>
	
	<description><![CDATA[MOD_REDEVENT_CALENDAR_DESC]]></description>
	
	<files>
		<filename module="mod_redeventcal">mod_redeventcal.php</filename>
		<filename>mod_redeventcal.css</filename>
		<filename>mod_redeventcal.js</filename>
		<filename>toggleoff.png</filename>
		<filename>index.html</filename>
    <filename>helper.php</filename>
    <filename>tmpl/default.php</filename>
    <filename>tmpl/index.html</filename>
    <folder>language</folder>
	</files>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="recal_tooltips_title" type="text" default="Events" label="MOD_REDEVENT_CALENDAR_TOOLTIP_TITLE" description="MOD_REDEVENT_CALENDAR_TOOLTIP_TITLE_DESC" />			
		    <field name="day_name_length" type="list" default="2" label="MOD_REDEVENT_CALENDAR_DAY_NAME_LENGTH" description="MOD_REDEVENT_CALENDAR_DAY_NAME_LENGTH_DESC">
					<option value="1">MOD_REDEVENT_CALENDAR_DAY_NAME_LENGTH_ONE</option>
					<option value="2">MOD_REDEVENT_CALENDAR_DAY_NAME_LENGTH_TWO</option>
					<option value="3">MOD_REDEVENT_CALENDAR_DAY_NAME_LENGTH_THREE</option>
					<option value="4">MOD_REDEVENT_CALENDAR_DAY_NAME_LENGTH_FULL</option>
				</field>
				<field name="first_day" type="list" default="1" label="MOD_REDEVENT_CALENDAR_FIRST_DAY" description="MOD_REDEVENT_CALENDAR_FIRST_DAY_DESC">
					<option value="0">Sunday</option>
					<option value="1">Monday</option>
				</field>
				<field name="show_week_number" type="radio" default="0" label="MOD_REDEVENT_CALENDAR_SHOW_WEEK_NB_LABEL" description="MOD_REDEVENT_CALENDAR_SHOW_WEEK_NB_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="Year_length" type="radio" default="1" label="MOD_REDEVENT_CALENDAR_YEAR_LENGTH" description="MOD_REDEVENT_CALENDAR_YEAR_LENGTH_DESC">
					<option value="0">Two</option>
					<option value="1">Four</option>
				</field>
				<field name="Month_length" type="radio" default="0" label="MOD_REDEVENT_CALENDAR_SHORT_MONTH_NAME" description="MOD_REDEVENT_CALENDAR_SHORT_MONTH_NAME_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="Month_offset" type="text" default="0" label="MOD_REDEVENT_CALENDAR_MONTH_OFFSET" description="MOD_REDEVENT_CALENDAR_MONTH_OFFSET_DESC" />
				<field name="Show_Tooltips" type="radio" default="1" label="MOD_REDEVENT_CALENDAR_SHOW_TOOLTIP" description="MOD_REDEVENT_CALENDAR_SHOW_TOOLTIP_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="Remember" type="radio" default="1" label="MOD_REDEVENT_CALENDAR_REMEMBER" description="MOD_REDEVENT_CALENDAR_REMEMBER_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="catid" type="text" default="" label="MOD_REDEVENT_CALENDAR_CATEGORY_ID" description="MOD_REDEVENT_CALENDAR_CATEGORY_ID_DESC" />
				<field name="venid" type="text" default="" label="MOD_REDEVENT_CALENDAR_VENUE_ID" description="MOD_REDEVENT_CALENDAR_VENUE_ID_DESC" />		
				
				<field name="toggle" type="radio" default="0" label="MOD_REDEVENT_CALENDAR_TOGGLE_LABEL" description="MOD_REDEVENT_CALENDAR_TOGGLE_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="default_toggle" type="radio" default="0" label="MOD_REDEVENT_CALENDAR_TOGGLE_DEFAULT_LABEL" description="MOD_REDEVENT_CALENDAR_TOGGLE_DEFAULT_DESC">
					<option value="0">MOD_REDEVENT_CALENDAR_TOGGLE_DEFAULT_HIDE</option>
					<option value="1">MOD_REDEVENT_CALENDAR_TOGGLE_DEFAULT_SHOW</option>
				</field>
				
			</fieldset>
	
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="0"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>
	</config>

</extension>