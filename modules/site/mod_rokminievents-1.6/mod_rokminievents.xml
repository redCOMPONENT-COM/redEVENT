<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" method="update">
	<name>RokMiniEvents</name>
	<author>RocketTheme, LLC</author>
	<creationDate>##DATE##</creationDate>
	<authorEmail>support@rockettheme.com</authorEmail>
	<authorUrl>http://www.rockettheme.com</authorUrl>
	<copyright>(C) 2005 - 2011 RocketTheme, LLC. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<version>##VERSION##</version>
	<description>RokMiniEvents allows to share your Joomla! website Google
		Calendar Events</description>
	<files>
		<filename module="mod_rokminievents">mod_rokminievents.php</filename>
		<filename>index.html</filename>
		<filename>CHANGELOG.php</filename>
		<folder>admin/</folder>
		<folder>elements/</folder>
		<folder>tmpl/</folder>
		<folder>lib/</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_rokminievents.ini</language>
	</languages>
	<params addpath="/modules/mod_rokminievents/elements">
		<param type="rokcssfixer" />
		<param name="builtin_css" type="radio" default="1"
			label="ROKMINIEVENTS_BUILTINCSS" description="">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="set_widths" type="radio" default="1"
			label="ROKMINIEVENTS_LABEL_SETWIDTHS" description="ROKMINIEVENTS_DESC_SETWIDTHS">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="wrapper_width" type="text" default="750" size="7"
			label="ROKMINEVENTS_LABEL_WRAPPERWIDTH" description="ROKMINEVENTS_DESC_WRAPPERWIDTH" />
		<param name="item_number" type="text" default="3" size="7"
			label="ROKMINEVENTS_LABEL_ITEMS" description="ROKMINEVENTS_DESC_ITEMS" />

		<param name="sources" type="rokminieventssources" label="ROKMINEVENTS_LABEL_SOURCES"
			description="ROKMINEVENTS_DESC_SOURCES" />

		<param name="@spacer" type="spacer"
			default="&lt;div   style=&quot;font-weight:normal;font-size:12px;color:#fff;padding:4px;margin:0;background:#666;&quot;&gt;Date Settings&lt;/div&gt;"
			label="" description="" />
		<param name="sortorder" type="list" default="ascending"
			label="ROKMINEVENTS_LABEL_SORTORDER" description="ROKMINEVENTS_DESC_SORTORDER">
			<option value="ascending">ROKMINEVENTS_ASCENDING</option>
			<option value="descending">ROKMINEVENTS_DESCENDING</option>
		</param>
		<param name="time_range" type="radio" default="predefined_ranges"
			label="ROKMINEVENTS_LABEL_TIMERANGETYPE" description="ROKMINEVENTS_DESC_TIMERANGETYPE">
			<option value="time_span">ROKMINEVENTS_TIME_SPAN</option>
			<option value="predefined_ranges">ROKMINEVENTS_PREDEFINEDRANGES</option>
		</param>
		<param name="@spacer" type="spacer"
			default="&lt;div  style=&quot;font-weight:normal;font-size:11px;color:#fff;padding:4px;margin:0;background:#888;&quot;&gt;Time Span&lt;/div&gt;"
			label="" description="" />

		<param name="startmin" type="calendar" default=""
			label="ROKMINEVENTS_LABEL_STARTINGFROM" description="ROKMINEVENTS_DESC_STARTINGFROM" />
		<param name="startmax" type="calendar" default=""
			label="ROKMINEVENTS_LABEL_ENDINGAT" description="ROKMINEVENTS_DESC_ENDINGAT" />
		<param name="@spacer" type="spacer"
			default="&lt;div  style=&quot;font-weight:normal;font-size:11px;color:#fff;padding:4px;margin:0;background:#888;&quot;&gt;Predefined Ranges&lt;/div&gt;"
			label="" description="" />
		<param name="rangespan" type="list" default="current_month"
			label="ROKMINEVENTS_LABEL_RANGES" description="ROKMINEVENTS_DESC_RANGES">
			<option value="next_week">ROKMINEVENTS_RANGE_NEXTWEEK</option>
			<option value="next_2_weeks">ROKMINEVENTS_RANGE_NEXT2WEEKS</option>
			<option value="next_3_weeks">ROKMINEVENTS_RANGE_NEXT3WEEKS</option>
			<option value="current_month">ROKMINEVENTS_RANGE_CURRENTMONTH</option>
			<option value="next_2_months">ROKMINEVENTS_RANGE_NEXT2MONTHS</option>
			<option value="next_3_months">ROKMINEVENTS_RANGE_NEXT3MONTHS</option>
			<option value="current_year">ROKMINEVENTS_RANGE_CURRENTYEAR</option>
			<option value="all_events">ROKMINEVENTS_RANGE_ALLEVENTS</option>
		</param>

		<param name="@spacer" type="spacer"
			default="&lt;div   style=&quot;font-weight:normal;font-size:12px;color:#fff;padding:4px;margin:0;background:#666;&quot;&gt;Display Settings&lt;/div&gt;"
			label="" description="" />

		<param name="show_description" type="list" default="1"
			label="ROKMINEVENTS_LABEL_SHOWDESC" description="ROKMINEVENTS_DESC_SHOWDESC">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="strip_tags" type="text" default="a,i,br"
			label="ROKMINEVENTS_LABEL_STRIPTAGS" description="ROKMINEVENTS_DESC_STRIPTAGS" />
		<param name="trim_description" type="list" default="1"
			label="ROKMINEVENTS_LABEL_TRIMDESC" description="ROKMINEVENTS_DESC_TRIMDESC">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="trim_count" type="text" default="200" size="7"
			label="ROKMINEVENTS_LABEL_TRIMCOUNT" description="ROKMINEVENTS_DESC_TRIMCOUNT" />
		<param name="localtime" type="list" default="local"
			label="ROKMINEVENTS_LABEL_SHOWLOCALTIMES" description="ROKMINEVENTS_DESC_SHOWLOCALTIMES">
			<option value="local">ROKMINEVENTS_LOCAL</option>
			<option value="server">ROKMINEVENTS_SERVER</option>
			<option value="forced">ROKMINEVENTS_SETTIMEZONE</option>
		</param>
		<param name="timezone" type="timezones" default="0"
			label="ROKMINEVENTS_LABEL_FORCEDTIMEZONE" description="ROKMINEVENTS_DESC_FORCEDTIMEZONE" />
		<param name="dayformat" type="dateformats" default="%d"
			label="ROKMINEVENTS_LABEL_DAYFORMAT" description="ROKMINEVENTS_DESC_DAYFORMAT">
			<option value="%d" />
			<option value="%e" />
		</param>
		<param name="monthformat" type="dateformats" default="%b"
			label="ROKMINEVENTS_LABEL_MONTHFORMAT" description="ROKMINEVENTS_DESC_MONTHFORMAT">
			<option value="%b" />
			<option value="%B" />
			<option value="%m" />
		</param>
		<param name="yearformat" type="dateformats" default="%Y"
			label="ROKMINEVENTS_LABEL_YEARFORMAT" description="ROKMINEVENTS_DESC_YEARFORMAT">
			<option value="%Y" />
			<option value="%y" />
		</param>
		<param name="timeformat" type="dateformats" default="%I:%M %p"
			label="ROKMINEVENTS_LABEL_TIMEFORMAT" description="ROKMINEVENTS_DESC_TIMEFORMAT">
			<option value="%I:%M %p" />
			<option value="%I:%M %P" />
			<option value="%I:%M%p" />
			<option value="%I:%M%P" />
			<option value="%H:%M" />
			<option value="%X" />
		</param>
		<param name="datedisplay" type="list" default="badge"
			label="ROKMINEVENTS_LABEL_DATEDISPLAY" description="ROKMINEVENTS_DESC_DATEDISPLAY">
			<option value="badge">ROKMINEVENTS_BADGE</option>
			<option value="inline">ROKMINEVENTS_INLINE</option>
			<option value="both">ROKMINEVENTS_BADGEANDINLINE</option>
		</param>
		<param name="showyear" type="list" default="0"
			label="ROKMINEVENTS_LABEL_SHOWYEAR" description="ROKMINEVENTS_DESC_SHOWYEAR">
			<option value="1">SHOW</option>
			<option value="0">HIDE</option>
		</param>
		<param name="limit_count" type="text" default="0"
			label="ROKMINEVENTS_LABEL_MAXDISPLAY" description="ROKMINEVENTS_DESC_MAXDISPLAY" />
		<param name="events_pane" type="list" default="3"
			label="ROKMINEVENTS_LABEL_EVENTSLIST" description="ROKMINEVENTS_DESC_EVENTSLIST">
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
			<option value="4">4</option>
			<option value="6">6</option>
		</param>
		<param name="timeline" type="list" default="arrows"
			label="ROKMINEVENTS_LABEL_TIMELINENAVIGATION" description="ROKMINEVENTS_DESC_TIMELINENAVIGATION">
			<option value="timeline">ROKMINEVENTS_TIMELINE</option>
			<option value="arrows">ROKMINEVENTS_ARROWS</option>
			<option value="both">ROKMINEVENTS_TIMELINEANDARROWS</option>
		</param>
		<param name="timeline_dates" type="list" default="inline"
			label="ROKMINEVENTS_LABEL_TIMELINEDATESDISPLAY" description="ROKMINEVENTS_DESC_TIMELINEDATESDISPLAY">
			<option value="inline">ROKMINEVENTS_INLINE</option>
			<option value="column">ROKMINEVENTS_COLUMN</option>
		</param>

		<param name="@spacer" type="spacer"
			default="&lt;div   style=&quot;font-weight:normal;font-size:12px;color:#fff;padding:4px;margin:0;background:#666;&quot;&gt;Animation Settings&lt;/div&gt;"
			label="" description="" />
		<param name="transition" type="list" default="Expo.easeInOut"
			label="ROKMINEVENTS_LABEL_TRANSITION" description="ROKMINEVENTS_DESC_TRANSITION">
			<option value="linear">linear</option>
			<option value="Quad.easeOut">Quad.easeOut</option>
			<option value="Quad.easeIn">Quad.easeIn</option>
			<option value="Quad.easeInOut">Quad.easeInOut</option>
			<option value="Cubic.easeOut">Cubic.easeOut</option>
			<option value="Cubic.easeIn">Cubic.easeIn</option>
			<option value="Cubic.easeInOut">Cubic.easeInOut</option>
			<option value="Quart.easeOut">Quart.easeOut</option>
			<option value="Quart.easeIn">Quart.easeIn</option>
			<option value="Quart.easeInOut">Quart.easeInOut</option>
			<option value="Quint.easeOut">Quint.easeOut</option>
			<option value="Quint.easeIn">Quint.easeIn</option>
			<option value="Quint.easeInOut">Quint.easeInOut</option>
			<option value="Expo.easeOut">Expo.easeOut</option>
			<option value="Expo.easeIn">Expo.easeIn</option>
			<option value="Expo.easeInOut">Expo.easeInOut</option>
			<option value="Circ.easeOut">Circ.easeOut</option>
			<option value="Circ.easeIn">Circ.easeIn</option>
			<option value="Circ.easeInOut">Circ.easeInOut</option>
			<option value="Sine.easeOut">Sine.easeOut</option>
			<option value="Sine.easeIn">Sine.easeIn</option>
			<option value="Sine.easeInOut">Sine.easeInOut</option>
			<option value="Back.easeOut">Back.easeOut</option>
			<option value="Back.easeIn">Back.easeIn</option>
			<option value="Back.easeInOut">Back.easeInOut</option>
			<option value="Bounce.easeOut">Bounce.easeOut</option>
			<option value="Bounce.easeIn">Bounce.easeIn</option>
			<option value="Bounce.easeInOut">Bounce.easeInOut</option>
			<option value="Elastic.easeOut">Elastic.easeOut</option>
			<option value="Elastic.easeIn">Elastic.easeIn</option>
			<option value="Elastic.easeInOut">Elastic.easeInOut</option>
		</param>
		<param name="duration" type="text" default="500"
			label="ROKMINEVENTS_LABEL_DURATION" description="ROKMINEVENTS_DESC_DURATION" />
		<param name="offset_x" type="text" default="0"
			label="ROKMINEVENTS_LABEL_OFFSETX" description="ROKMINEVENTS_DESC_OFFSETX" />
	</params>
	<params group="advanced">
		<param name="cache" type="hidden" default="0" />
		<param name="module_cache" type="list" default="1" label="CACHING"
			description="Select whether to cache the content of this module">
			<option value="1">USE GLOBAL</option>
			<option value="0">ROKMINIEVENTS_NOCACHING</option>
		</param>
		<param name="cache_time" type="text" default="900" label="CACHE TIME"
			description="The time before the module is recached" />
		<param name="moduleclass_sfx" type="text" default=""
			label="MODULE CLASS SUFFIX" description="" />
	</params>
</install>
